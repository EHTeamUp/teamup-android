<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 인터넷 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 알림 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".TeamUpApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeamUp"
        android:usesCleartextTraffic="true">
        <activity
            android:name="kr.mojuk.teamup.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kr.mojuk.teamup.auth.LoginActivity"
            android:exported="false"/>
        <activity
            android:name="kr.mojuk.teamup.auth.SignupActivity"
            android:exported="false" />
        <activity
            android:name="kr.mojuk.teamup.auth.SignupInterestActivity"
            android:exported="false" />
        <activity
            android:name="kr.mojuk.teamup.auth.SignupTestBaseActivity"
            android:exported="false" />
        <activity
            android:name="kr.mojuk.teamup.auth.SignupExperienceActivity"
            android:exported="false" />
        <activity
            android:name="kr.mojuk.teamup.auth.SignupFinishActivity"
            android:exported="false" />

        <activity
            android:name="kr.mojuk.teamup.personality.PersonalityTestResultActivity"
            android:exported="false"/>
        <activity

            android:name="kr.mojuk.teamup.MypageActivity"
            android:exported="false"/>
        <activity
            android:name="kr.mojuk.teamup.mypage.MypageUserinfoEditActivity"
            android:exported="false" />

        <activity
            android:name="kr.mojuk.teamup.mypage.MypageInterestActivity"
            android:exported="false" />
        <activity
            android:name="kr.mojuk.teamup.mypage.MypageTestIngActivity"
            android:exported="false" />
        <activity
            android:name="kr.mojuk.teamup.mypage.MypageTestResultActivity"
            android:exported="false" />

        <!-- Firebase FCM 서비스 -->
        <service
            android:name=".notification.TeamUpFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
</manifest>