<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <!--
    전체적인 내부 여백을 16dp에서 12dp로 줄여 높이를 감소시켰습니다.
    -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/profile_card_background"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- 상단: 역할 태그 + 공모전 제목 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!-- 공모전 제목 텍스트 크기를 16sp에서 15sp로 줄였습니다. -->
            <TextView
                android:id="@+id/tv_contest_title"
                android:text="배리어프리 앱 개발 콘테스트"
                android:textStyle="bold"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_team_leader"
            android:text="팀장: team_leader_id"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>