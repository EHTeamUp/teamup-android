<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:elevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <!-- 모집글 제목과 D-Day -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/titleText"
                android:text="프론트엔드 개발자 구합니다!"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/dDayText"
                android:text="D-10"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>
        </LinearLayout>


        <!-- 모집 인원, 모집자, 작성일 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/peopleText"
                android:text="모집 인원: 2 / 6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/organizerText"
                android:text="모집자: hong_gil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- ▼▼▼ 추가된 TextView ▼▼▼ -->
            <TextView
                android:id="@+id/creationDateText"
                android:text="작성일: 25-08-24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"/>
            <!-- ▲▲▲ 추가된 TextView ▲▲▲ -->
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>

        <!-- 추가: 공모전 제목 표시 영역 -->
        <TextView
            android:id="@+id/contestTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="배리어프리 앱 개발 콘테스트"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
