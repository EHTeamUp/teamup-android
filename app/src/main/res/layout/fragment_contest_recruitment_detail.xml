<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 1. 댓글 입력창을 화면 하단에 고정 -->
    <LinearLayout
        android:id="@+id/ll_comment_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/et_comment_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:hint="내용을 적어주세요."
            android:minHeight="48dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btn_comment_submit"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/black"
            android:minHeight="48dp"
            android:text="작성"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- 2. 스크롤될 모든 콘텐츠를 NestedScrollView에 배치 -->
    <!-- 상단 타이틀과 하단 입력창 사이의 모든 공간을 차지하도록 제약조건 설정 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_comment_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <!-- 기존의 LinearLayout 구조를 그대로 사용 -->
        <LinearLayout
            android:id="@+id/main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- 1. 뒤로가기 버튼 및 콘테스트 제목 -->
            <LinearLayout
                android:id="@+id/ll_contest_title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/mypage_menu_item_background">
                <ImageView
                    android:id="@+id/iv_apply_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_left"/>
                <TextView
                    android:id="@+id/contest_title_text_in_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="뒤로가기"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 2. 포스터 및 팀 정보 -->
            <LinearLayout
                android:id="@+id/ll_poster_and_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="169dp"
                    android:layout_height="268dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/poster_sample1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teamMemberCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팀원 (2/6)"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_team_members"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_contest_recruitment_member" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:id="@+id/ll_recruiter_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/tv_view_applicants"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/mypage_menu_item_background"
                                android:drawableEnd="@drawable/ic_arrow_right"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:padding="12dp"
                                android:text="지원자 리스트"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/btn_apply"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mypage_menu_item_background"
                            android:drawableEnd="@drawable/ic_arrow_right"
                            android:drawablePadding="12dp"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:text="지원하기"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 3. 마감 기한 -->
            <LinearLayout
                android:id="@+id/ll_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@drawable/edittext_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days Until Deadline"/>
                <TextView
                    android:id="@+id/dday_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D-10"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 5. 모집글 제목 및 내용 -->
            <LinearLayout
                android:id="@+id/ll_post_content_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@drawable/edittext_border">

                <TextView
                    android:id="@+id/tv_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프론트엔드 개발자 구합니다!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_post_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="React Native 경험자 우대합니다. 함께 좋은 앱을 만들어봐요. 열정 넘치는 분들의 많은 지원 바랍니다."
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <!-- 4. 댓글 섹션 -->
            <TextView
                android:id="@+id/tv_comments_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_comment"
                tools:itemCount="5"/>
            <!-- ▼▼▼ 이 TextView를 추가해주세요 ▼▼▼ -->
            <TextView
                android:id="@+id/tv_no_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="24dp"
                android:text="아직 댓글이 없습니다."
                android:textColor="#555555"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/rv_comments"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/rv_comments" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ▼▼▼ 수정된 부분 ▼▼▼ -->
    <!-- 플로팅 버튼들을 가로로 정렬하기 위한 LinearLayout 컨테이너 -->
    <LinearLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/ll_comment_input"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <!-- 삭제 버튼 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#dddddd"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="게시글 삭제"
            app:fabSize="normal"
            app:elevation="0dp"
            android:layout_marginEnd="8dp"/>

        <!-- 수정 버튼 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#dddddd"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="게시글 수정"
            app:fabSize="normal"
            app:elevation="0dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>