<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header - TeamUp Title -->
    <TextView
        android:id="@+id/contest_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모집글"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 메인 콘텐츠를 담을 스크롤 뷰 -->
    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/contest_title_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <!-- 스크롤 뷰 내의 콘텐츠들을 수직으로 정렬할 LinearLayout -->
        <LinearLayout
            android:id="@+id/main_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- 1. 뒤로가기 버튼 및 콘테스트 제목 -->
            <LinearLayout
                android:id="@+id/ll_contest_title_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_box_border"> <!-- 테두리 스타일 drawable 필요 -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_left"/> <!-- 뒤로가기 아이콘 drawable 필요 -->
                <TextView
                    android:id="@+id/contest_title_text_in_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="뒤로가기"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- 2. 포스터 및 팀 정보 -->
            <LinearLayout
                android:id="@+id/ll_poster_and_team"
                android:layout_width="match_parent"
                android:layout_height="268dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- 2.1. 콘테스트 포스터 이미지 -->
                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="169dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/poster_sample1" /> <!-- placeholder 이미지 drawable 필요 -->

                <!-- 2.2. 팀 정보 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teamMemberCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팀원 (2/6)"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- 팀원 목록을 보여줄 RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_team_members"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:visibility="visible"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_contest_recruitment_member" />

                    <!-- 모집자/멤버에 따라 다른 뷰를 보여줄 컨테이너 -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <!-- 모집자일 경우 보여줄 뷰 -->
                        <LinearLayout
                            android:id="@+id/ll_recruiter_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tv_view_applicants"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/rounded_box_border"
                                android:drawableEnd="@drawable/ic_arrow_right"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:padding="12dp"
                                android:text="지원자 더 보러가기"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_team_synergy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_box_border"
                                android:drawableEnd="@drawable/ic_arrow_right"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:padding="12dp"
                                android:text="팀 시너지 점수"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- 멤버일 경우 보여줄 뷰 -->
                        <TextView
                            android:id="@+id/btn_apply"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_box_border"
                            android:drawableEnd="@drawable/ic_arrow_right"
                            android:drawablePadding="12dp"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:text="지원하기"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:visibility="gone" /> <!-- 코틀린/자바 코드에서 제어 -->
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 3. 마감 기한 -->
            <LinearLayout
                android:id="@+id/ll_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@drawable/background_rounded_white_border">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days Until Deadline"/>
                <TextView
                    android:id="@+id/dday_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D-10"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 5. 모집글 제목 및 내용 -->
            <LinearLayout
                android:id="@+id/ll_post_content_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@drawable/background_rounded_white_border">

                <!-- 모집글 제목 -->
                <TextView
                    android:id="@+id/tv_post_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프론트엔드 개발자 구합니다!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"/>

                <!-- 모집글 내용 -->
                <TextView
                    android:id="@+id/tv_post_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="React Native 경험자 우대합니다. 함께 좋은 앱을 만들어봐요. 열정 넘치는 분들의 많은 지원 바랍니다."
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <!-- 4. 댓글 섹션 -->
            <TextView
                android:id="@+id/tv_comments_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <!-- 4.1. 댓글 아이템 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_comment"
                tools:itemCount="1"/>

            <!-- 5. 댓글 입력 창 -->
            <LinearLayout
                android:id="@+id/ll_comment_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/et_comment_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="내용을 적어주세요."
                    android:padding="12dp"
                    android:minHeight="48dp"
                    android:background="@drawable/rounded_box_border"/>

                <Button
                    android:id="@+id/btn_comment_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/black"
                    android:text="작성"
                    app:cornerRadius="8dp"
                    android:textSize="20sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 삭제 플로팅 버튼 (서브) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:contentDescription="삭제"
        android:src="@drawable/ic_delete"
        android:visibility="invisible"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/fab_edit"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 수정 플로팅 버튼 (메인) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:contentDescription="수정"
        android:src="@drawable/ic_edit"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>