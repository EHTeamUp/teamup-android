<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 상단 Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TeamUp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 콘테스트 이름 박스 -->
    <LinearLayout
        android:id="@+id/contest_name_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_gray_box"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_contest_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="배리어프리 앱 개발 콘테스트"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 제목 라벨 (변경 없음) -->
    <TextView
        android:id="@+id/subject_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/contest_name_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <!-- 제목 입력 박스: TextView를 EditText로 변경 -->
    <EditText
        android:id="@+id/et_subject_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box_border"
        android:hint="제목을 입력하세요 (예: 프론트 잘하시는 분 모집합니다!)"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/subject_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- 모집 인원 수 라벨 (변경 없음) -->
    <TextView
        android:id="@+id/member_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모집 인원 수"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/et_subject_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <!-- 인원 수 선택 UI: 기존 LinearLayout을 Spinner로 변경 -->
    <Spinner
        android:id="@+id/spinner_member_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box_border"
        android:padding="4dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/member_count_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- 내용 라벨 (변경 없음) -->
    <TextView
        android:id="@+id/content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spinner_member_count"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <!-- 내용 입력 박스: TextView를 EditText로 변경 -->
    <EditText
        android:id="@+id/et_content_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_box_border"
        android:gravity="top"
        android:hint="모집글 내용을 입력해주세요. (예: 어떤 주제로 무엇을 개발할 계획인지, 어떤 팀원이면 좋은지 등)"
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/submit_button"
        app:layout_constraintTop_toBottomOf="@id/content_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>


    <!-- 작성 버튼 (변경 없음) -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        android:paddingHorizontal="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 네비게이션 (변경 없음) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>








