<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginTop="8dp"
    android:background="#F5F5F5">

    <!-- ==================== 읽기 모드 UI ==================== -->
    <!-- 평소에 보여지는 댓글 정보입니다. -->
    <LinearLayout
        android:id="@+id/layout_read_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_comment_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_nickname"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="댓글 내용이 여기에 표시됩니다."/>

        <!-- 답글, 수정, 삭제 버튼 컨테이너 -->
        <LinearLayout
            android:id="@+id/layout_read_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_reply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="답글 달기"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <!-- 구분자 -->
            <TextView
                android:id="@+id/tv_separator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- 구분자 -->
            <TextView
                android:id="@+id/tv_separator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- ==================== 수정 모드 UI ==================== -->
    <!-- '수정' 버튼을 눌렀을 때 보여지는 UI입니다. 평소에는 숨겨져 있습니다. -->
    <LinearLayout
        android:id="@+id/layout_edit_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_comment_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:hint="댓글 수정..."
            android:padding="8dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="취소"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="저장"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>