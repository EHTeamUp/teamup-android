<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 상단 Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TeamUp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 콘테스트 이름 박스 -->
    <LinearLayout
        android:id="@+id/contest_name_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_gray_box"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="배리어프리 앱 개발 콘테스트"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 제목 라벨 -->
    <TextView
        android:id="@+id/subject_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/contest_name_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <!-- 제목 입력 박스 -->
    <LinearLayout
        android:id="@+id/subject_input_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box_border"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/subject_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프론트 잘하시는 분 모집합니다!"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- 모집 인원 수 라벨 -->
    <TextView
        android:id="@+id/member_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모집 인원 수"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/subject_input_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <!-- 인원 수 드롭다운 박스 -->
    <LinearLayout
        android:id="@+id/member_dropdown_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box_border"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/member_count_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <!-- 선택된 값 표시 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2명"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_up"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- 드롭다운 옵션들 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1명"
            android:textSize="14sp"
            android:textColor="#666666"
            android:padding="16dp"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2명"
            android:textSize="14sp"
            android:textColor="#000000"
            android:padding="16dp"
            android:background="#E0E0E0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3명"
            android:textSize="14sp"
            android:textColor="#666666"
            android:padding="16dp"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4명"
            android:textSize="14sp"
            android:textColor="#666666"
            android:padding="16dp"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- 내용 라벨 -->
    <TextView
        android:id="@+id/content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/member_dropdown_box"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <!-- 내용 입력 박스 -->
    <LinearLayout
        android:id="@+id/content_input_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_box"
        android:padding="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/content_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="~~ 주제를 가지고 ~~을 개발할 계획입니다"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="~~인 분이면 좋겠습니다."
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- 작성 버튼 -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000"
        android:paddingHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/content_input_box"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 네비게이션 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>