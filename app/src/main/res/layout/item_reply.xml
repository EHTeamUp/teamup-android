<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp">

    <!-- 들여쓰기를 위한 화살표 아이콘 -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_reply_arrow"
        android:layout_marginEnd="8dp"
        android:layout_gravity="top"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#F5F5F5">

        <!-- ==================== 읽기 모드 UI ==================== -->
        <LinearLayout
            android:id="@+id/layout_read_mode_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reply_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_nickname"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_reply_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="대댓글 내용이 여기에 표시됩니다."/>

            <!-- 답글, 수정, 삭제 버튼 컨테이너 -->
            <LinearLayout
                android:id="@+id/layout_read_actions_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- '답글 달기' 버튼 추가 -->
                <TextView
                    android:id="@+id/tv_reply_button_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="답글 달기"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/tv_separator_reply_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  |  "
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_edit_button_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수정"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_separator_reply_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  |  "
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_delete_button_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <!-- ==================== 수정 모드 UI ==================== -->
        <LinearLayout
            android:id="@+id/layout_edit_mode_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_reply_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="대댓글 수정..."
                android:textSize="14sp"
                android:background="@drawable/edittext_border"
                android:padding="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_cancel_button_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:textColor="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/tv_save_button_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저장"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>