<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TeamUp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- ID -->
    <TextView
        android:id="@+id/tv_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Value"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_id_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_check_id"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_check_id"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="중복 검사"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/et_id"
        app:layout_constraintBottom_toBottomOf="@id/et_id"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ID 결과 메시지 -->
    <TextView
        android:id="@+id/tv_id_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/et_id"
        app:layout_constraintStart_toStartOf="@id/et_id"
        android:layout_marginTop="4dp" />

    <!-- Password -->
    <TextView
        android:id="@+id/tv_pw_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintTop_toBottomOf="@id/tv_id_message"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Value"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/tv_pw_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Confirm Password -->
    <TextView
        android:id="@+id/tv_confirm_pw_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Value"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_pw_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Name -->
    <TextView
        android:id="@+id/tv_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_password"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Value"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/tv_name_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email -->
    <TextView
        android:id="@+id/tv_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Value"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/tv_email_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_send_email"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_send_email"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="인증번호 발송"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/et_email"
        app:layout_constraintBottom_toBottomOf="@id/et_email"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email Verification Code -->
    <TextView
        android:id="@+id/tv_email_code_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_email_code"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="인증번호를 입력하세요"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/tv_email_code_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_verify_email"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_verify_email"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="인증 확인"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/et_email_code"
        app:layout_constraintBottom_toBottomOf="@id/et_email_code"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email 결과 메시지 -->
    <TextView
        android:id="@+id/tv_email_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/et_email_code"
        app:layout_constraintStart_toStartOf="@id/et_email_code"
        android:layout_marginTop="4dp" />

    <!-- Next 버튼 (오른쪽 하단) -->
    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:text="Next →"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
