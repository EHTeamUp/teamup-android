<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TeamUp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_header_title"
        app:layout_constraintBottom_toTopOf="@id/btn_navigation_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- ID -->
            <TextView
                android:id="@+id/tv_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Value"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_id_check"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="중복 확인"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white" />

            </LinearLayout>

            <!-- ID 결과 메시지 -->
            <TextView
                android:id="@+id/tv_id_check_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp" />

            <!-- Password -->
            <TextView
                android:id="@+id/tv_pw_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Value"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="8dp" />

            <!-- Confirm Password -->
            <TextView
                android:id="@+id/tv_confirm_pw_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/et_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Value"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="8dp" />

            <!-- Name -->
            <TextView
                android:id="@+id/tv_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="24dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="이름을 입력하세요"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:textColor="@android:color/black" />

            <!-- Email -->
            <TextView
                android:id="@+id/tv_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Value"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_email_send"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="인증번호 전송"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white" />

            </LinearLayout>

            <!-- Email Code -->
            <TextView
                android:id="@+id/tv_email_code_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Verification Code"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/et_email_code"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Value"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_email_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="인증 확인"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white" />

            </LinearLayout>

            <!-- Email 인증 결과 메시지 -->
            <TextView
                android:id="@+id/tv_email_verify_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Navigation Buttons Container -->
    <LinearLayout
        android:id="@+id/btn_navigation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Next →"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
