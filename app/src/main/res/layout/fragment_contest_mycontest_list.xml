<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contest_recruitment_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="kr.mojuk.teamup.MainActivity">


    <!-- ▼▼▼ 새로 추가된 공모전 제목 바 ▼▼▼ -->
    <LinearLayout
        android:id="@+id/ll_contest_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mypage_menu_item_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_left"/>

        <TextView
            android:id="@+id/contest_title_text_in_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="내참여 공모전 목록"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_contests"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ll_contest_title_bar"
        app:layout_constraintBottom_toTopOf="@id/btn_go_to_contest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_contest_mycontest"
        tools:itemCount="5"/>

    <!-- 공모전 참여하러가기 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_to_contest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="공모전 참여하러가기"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/black"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/rv_my_contests"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>