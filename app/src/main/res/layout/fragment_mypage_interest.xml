<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="kr.mojuk.teamup.MainActivity">

    <!-- 뒤로가기 버튼 -->
    <LinearLayout
        android:id="@+id/ll_back_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/mypage_menu_item_background"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="기술/역할"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="start" />

    </LinearLayout>

    <!-- 관심 언어 타이틀 -->
    <TextView
        android:id="@+id/tv_language_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용 가능한 기술 *"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- ScrollView for main content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 기술 선택을 위한 ScrollView -->
            <ScrollView
                android:id="@+id/scrollViewSkills"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupLanguages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false"
                    app:chipSpacing="8dp"
                    android:padding="8dp">

                </com.google.android.material.chip.ChipGroup>
            </ScrollView>

            <!-- 기술 페이지 인디케이터 + 화살표 -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginBottom="8dp"
    android:visibility="visible">

    <!-- 왼쪽 화살표 컨테이너 -->
    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:minHeight="32dp"
        android:gravity="center"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/btn_indicator_skills_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="&lt;"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/arrow_button_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- 인디케이터 점들 들어갈 곳 -->
    <LinearLayout
        android:id="@+id/ll_skills_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"/>

    <!-- 오른쪽 화살표 컨테이너 -->
    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:minHeight="32dp"
        android:gravity="center"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/btn_indicator_skills_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="&gt;"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/arrow_button_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"/>
    </LinearLayout>

</LinearLayout>





            <!-- 역할 타이틀 -->
            <TextView
                android:id="@+id/tv_role_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원하는 역할 *"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- 역할 선택을 위한 ScrollView -->
            <ScrollView
                android:id="@+id/scrollViewRoles"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupRoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false"
                    app:chipSpacing="8dp"
                    android:padding="8dp">

                </com.google.android.material.chip.ChipGroup>
            </ScrollView>

           <!-- 역할 페이지 인디케이터 + 화살표 -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginBottom="8dp"
    android:visibility="visible">

    <!-- 왼쪽 화살표 컨테이너 -->
    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:minHeight="32dp"
        android:gravity="center"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/btn_indicator_roles_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="&lt;"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/arrow_button_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:visibility="gone"/>
    </LinearLayout>

    <!-- 인디케이터 점들 들어갈 곳 -->
    <LinearLayout
        android:id="@+id/ll_roles_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"/>

    <!-- 오른쪽 화살표 컨테이너 -->
    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:minHeight="32dp"
        android:gravity="center"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/btn_indicator_roles_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="&gt;"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/arrow_button_background"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"/>
    </LinearLayout>

</LinearLayout>





        </LinearLayout>

    </ScrollView>

</LinearLayout>
